<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="32dp">

        <!-- 🏷️ QR Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="LinkedIn QR Code"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 🖼️ QR Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_card"
            app:cardCornerRadius="28dp"
            app:cardElevation="20dp"
            app:strokeColor="@color/md_theme_outline"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:contentDescription="QR Code Image"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/qr" />
        </com.google.android.material.card.MaterialCardView>

        <!-- 🌐 QR Content -->
        <TextView
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_qr_data"
            android:lineSpacingExtra="9dp"
            android:padding="18dp"
            android:text="https://github.com/sa1dev"
            android:textColor="?android:textColorPrimary"
            android:textIsSelectable="true"
            android:textSize="16sp" />

        <!-- ✨ Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCopy"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="Copy"
                android:src="@drawable/c" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="Share"
                android:src="@drawable/se" />

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="Favorite"
                android:src="@drawable/fav" />
        </LinearLayout>

        <!-- ✏️ Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="36dp"
            android:paddingVertical="14dp"
            android:text="Edit QR Code"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="14dp"
            app:icon="@drawable/setting"
            app:iconPadding="12dp"
            app:iconTint="@android:color/black" />
    </LinearLayout>
</ScrollView>
