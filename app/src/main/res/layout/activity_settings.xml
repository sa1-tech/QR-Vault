<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ⚙️ Data Management -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="📤 Data Management"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnExportCSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/c"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp"
            android:text="Export All QR Codes (CSV)" />

        <Button
            android:id="@+id/btnExportPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/pdf"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp"
            android:text="Export All QR Codes (PDF)" />

        <Button
            android:id="@+id/btnBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/clu"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp"
            android:text="Backup All (JSON)" />

        <Button
            android:id="@+id/btnRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/c"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp"
            android:text="Restore Backup (JSON)" />

        <!-- 🌙 Appearance -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingBottom="12dp"
            android:text="🌙 Appearance"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Enable Dark Mode"
            android:textSize="16sp" />

        <!-- ℹ️ App Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingBottom="12dp"
            android:text="ℹ️ App Info"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Version 1.0.0" />

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/c"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp"
            android:text="About / Privacy Policy" />

    </LinearLayout>
</ScrollView>
